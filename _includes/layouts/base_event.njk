---
"layout": "layouts/base_tailwind.njk"
---

  <!-- Hero / Jumbo Title & Subtitle -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-hero-gradient pointer-events-none"></div>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20 sm:py-28">
      <div class="max-w-3xl">
        <h1 class="mt-6 text-4xl sm:text-6xl font-extrabold tracking-tight leading-tight">
          {{ title }}<br/>
          <span class="text-3xl bg-clip-text text-transparent bg-gradient-to-r from-sand via-amber to-cream">{{ subtitle }}</span>
        </h1>
        {% if event_date %}
        <p class="mt-2 text-lg sm:text-xl text-cream/70">Event Date: <strong>{{ event_date }}</strong></p>
        {% endif %}
        <p class="mt-5 text-lg sm:text-xl text-cream/85">{{ content | safe }}</p>

        <div class="mt-8 flex flex-col sm:flex-row gap-4">
        {% if submit_link %}
          <a href="{{ submit_link }}" target="_blank" class="inline-flex items-center justify-center gap-2 rounded-lg bg-plum px-6 py-3 text-base font-semibold text-cream shadow-glow hover:bg-magenta focus:outline-none focus-visible:ring-2 focus-visible:ring-sand">
            Submission Form
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 -mr-0.5" viewBox="0 0 20 20" fill="currentColor"><path d="M10.75 3.5a.75.75 0 0 0-1.5 0v5.25H4a.75.75 0 0 0 0 1.5h5.25V15a.75.75 0 0 0 1.5 0V10.25H16a.75.75 0 0 0 0-1.5h-5.25V3.5Z"/></svg>
          </a>
        {% endif %}
        </div>
      </div>
    </div>
  </section>

  <section class="relative overflow-hidden">
     <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20 sm:py-28">
  <a href="/events" class="mx-auto mt-6 inline-flex items-center gap-2 rounded-full bg-plum px-4 py-2 text-sm font-semibold text-cream shadow-glow hover:bg-magenta focus:outline-none focus-visible:ring-2 focus-visible:ring-sand">
    View all events
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
    </a>
    </div>
    </section>